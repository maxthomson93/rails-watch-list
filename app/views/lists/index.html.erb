<%# http://localhost:3000/lists %>
<h1>This is for the index of the lists</h1>
<div class="container">
  <div class="card">
    <div class="card-body">
      <% @lists.each do |list| %>
        <div class="card-category" style="margin-top: 5px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)">
          <%= link_to list.name, list_path(list), class: 'text-decoration-none text-white' %>
        </div>
      <% end %>
      <%= link_to lists_path, class: 'btn btn-success' do  %>
        <i class="fa-solid fa-shield-cat"></i>
        return
      <% end %>
      <%= link_to "Add a new list!", new_list_path(@list) %>
    </div>
  </div>
</div>
